@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>

<div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="justify-content: center; margin-left: 25%; margin-right: 25%">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="https://blast-games.ru/wp-content/uploads/ghoulboy-dark-sword-of-goblin-obzor-scr-2.jpg" alt="Los Angeles" align="middle" width="1280">
            </div>

            <div class="item">
                <img src="https://gagadget.com/media/cache/d2/85/d28522cb0adaed1b777f65bf7975bd7a.jpg" alt="Chicago" align="middle"  width="1280">
            </div>

            <div class="item">
                <img src="https://images.unian.net/photos/2020_01/1579706562-2913.jpg?0.46687671205940107" alt="New York" align="middle" width="1280">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="Desc">
        <h9>About Double Mind</h9>
        <hr/>
        <p>Double Mind - a platform game with two characters! Defeat enemies, gain maximum game points, overcome obstacles! You are Jack, a boy with an extraordinary imagination, so sometimes you turn into a cyber robot and destroy everything around. Immerse yourself in the aesthetics of the 80s and return to childhood, when you could be anyone, you just had to imagine.</p>
    </div>
    <div class="SysR">
        <h9>System Requirments</h9>
        <hr />
        <p> Android version: Android 9 or higher<br>
            CPU: Qualcomm Snapdragon 660 or higher<br>
            GPU: Adreno 512 or higher<br>
            RAM: 1 GB<br>
            Memory: 128 MB</p>
    </div>
</div>
