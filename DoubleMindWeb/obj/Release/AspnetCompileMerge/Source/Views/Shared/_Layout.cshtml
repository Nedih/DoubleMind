<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="page-container">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: darkblue; margin-bottom: 0;  vertical-align: middle">
            <img src=@Url.Content("~/Resources/NavIcon.png") height="80" width="80">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav-link">
                    <li>
                        @Html.ActionLink("Double Mind", "Index", "Home", new { @class = "nav-link" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Download", "Download", "Home", new { @class = "nav-link" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Comments", "Comments", "Home", new { @class = "nav-link" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Contacts", "Contacts", "Home", new { @class = "nav-link" }, null)
                    </li>
                </ul>
                @Html.Partial("_LoginPartial", new { @class = "login-btn" })
            </div>
        </nav>
        <div class="shapka">
            <img src=@Url.Content("~/Resources/DoubleMind.png")>
        </div>
        <div style="margin-left: 4%; margin-right: 4%; padding-bottom: 185pt">
            @RenderBody()
        </div>
        <footer>
            <hr />
            <p>Double Mind ©<br>Made by CheeseCake Games<br>2020</p>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>

