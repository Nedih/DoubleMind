@using DoubleMindWeb.Models;
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.Owin;
@using System.Web;
@model IEnumerable<DoubleMindWeb.Models.Comment>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

@{
    ApplicationUserManager userManager = HttpContext.Current.GetOwinContext()
                                           .GetUserManager<ApplicationUserManager>();
    ApplicationUser user = userManager.FindByName(User.Identity.Name);
}

<div class="centered3">
    <p>Comments</p>
    <hr />
</div>


        @foreach (var b in Model)
        {
<div class="centered">
    <div class="horizontal" style="margin-top: auto">

        <div class="centered2">
            <div class="horizontal" style="margin-top: 30pt; margin-bottom: 30pt">
                <dl class="dl-horizontal">
                    <dt align="center">@b.CommentUserName: </dt>
                    <dd>
                        Mark: @b.CommentStars
                    </dd>
                    <dt>Text:</dt>
                    <dd style="max-width: 250px; word-break: break-all;">@b.CommentText</dd>
                    <dt>Date:</dt>
                    <dd>@b.CommentCreated</dd>
                </dl>
            </div>
        </div>
    
        <div class="deleteForm" style="margin-top: 20pt">
            @using (Html.BeginForm("DeleteComment", "Home", FormMethod.Post))
            {
                <input type="hidden" name="CommentId" value="@b.CommentId" />
                if (user.Roles.Count > 1)
                {
                    <input type="submit" value="Delete" class="btn-delete" />
                }
            }
        </div>
    </div>
</div>
        }

<div class="centered">
    <div class="comment">
        @using (Html.BeginForm("PostComment", "Home", FormMethod.Post))
        {
            <span>@User.Identity.Name</span>
            <input type="number" name="CommentMark" min="1" max="5" placeholder="1-5"
                   style="        width: 50px;
        height: 20px;
        margin-top: 10px;
        margin-left: 20px;
        align-content: end
" /><br />
            <input type="text" name="CommentText" placeholder="Type new comment..."
                   style=" width: 100%; height: 50px; margin-top: 15px" />
            <br />
            <input type="submit" value="Post Comment"
                   class="btn btn-success" style="margin-top:10px" />
        }
    </div>
</div>

