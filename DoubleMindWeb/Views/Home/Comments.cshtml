@model IEnumerable<DoubleMindWeb.Models.Comment>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>

    <div style="padding: 10px; margin-top: 0">
        <p style="font-size: 22pt">Comments</p>
        <table style="margin: 30px; margin-bottom: 20px; padding-bottom: 40px">
            @foreach (var b in Model)
            {
                <tr style=" margin: 100px">
                    <td style="padding: 10px; padding-top: 50px">
                        <span style="padding: 10px; margin: 10px" align="right">@b.CommentUserName</span>
                        <span style="padding: 10px; margin: 10px" align="right">@b.CommentStars</span>
                    </td>
                </tr>
                <tr style="border:1px solid; margin: 30px; margin-bottom: 100px; padding-bottom: 100px">
                    <td style="padding: 10px; margin-bottom: 100px"><span style="margin: 15px; padding:15px; padding-bottom: 100px ">@b.CommentText</span></td>
                    <td><span style="margin: 10px; padding: 10px; padding-bottom: 100px;">@b.CommentCreated</span></td>
                </tr>
            }
        </table>
        <div style="margin-top: 70px; margin-left: 30px">
            @using (Html.BeginForm("PostComment", "Home", FormMethod.Post))
            {
                <span>@User.Identity.Name</span><br/>
                <span>Mark:</span><input type="number" name="CommentMark" min="1" max="5" placeholder="1-5"
                       style="width: 50px; height: 20px; margin-top: 10px; margin-left: 20px; align-content:end" /><br />
                <input type="text" name="CommentText" placeholder="Type new comment..."
                       style=" width: 100%; height: 50px; margin-top: 15px" />
                <br />
                <input type="submit" value="Post Comment"
                       class="btn btn-success" style="margin-top:10px" />
            }
        </div>
     </div>

