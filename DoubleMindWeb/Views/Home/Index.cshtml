@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>

<div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="justify-content: center">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="border: 2px black solid">
            <div class="item active">
                <img src="..\Resources\GamePlay1.png" alt="GamePlay1" align="middle" width="1280">
            </div>

            <div class="item">
                <img src="..\Resources\GamePlay2.png" alt="GamePlay2" align="middle" width="1280">
            </div>

            <div class="item">
                <img src="..\Resources\GamePlay3.png" alt="GamePlay3" align="middle" width="1280">
            </div>


            <div class="item">
                <img src="..\Resources\GamePlay4.png" alt="GamePlay4" align="middle" width="1280">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div style="background-color: #e13a51; border: 2px solid black; left: 0; right: 0; margin-top: 50px; color: black">
        <div class="Desc">
            <h9>About Double Mind</h9>
            <hr style=" border: 1px solid black;
            border-bottom-width: 1px; background-color: black" />
            <p>Double Mind - a platform game with two characters! Defeat enemies, gain maximum game points, overcome obstacles! You are Jack, a boy with an extraordinary imagination, so sometimes you turn into a cyber robot and destroy everything around. Immerse yourself in the aesthetics of the 80s and return to childhood, when you could be anyone, you just had to imagine.</p>
        </div>
    </div>
    <div class="SysR">
        <h9>System Requirments</h9>
        <hr />
        <p> Android version: Android 6 or higher<br>
            CPU: Qualcomm Snapdragon 660 or higher<br>
            GPU: Adreno 512 or higher<br>
            RAM: 1 GB<br>
            Memory: 128 MB</p>
    </div>
</div>
